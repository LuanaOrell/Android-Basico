<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="100">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="0"
        android:id="@+id/textResult"
        android:layout_weight="25"
        android:gravity="center_vertical|center_horizontal|end"
        android:textSize="@dimen/text_size" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="75">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="7"
                android:id="@+id/btn_n7"
                android:layout_weight="1"
                android:background="@color/button_color"
                android:textSize="@dimen/text_size"
                android:textColor="@color/color_text_button"
                android:onClick="onClick" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="8"
                android:id="@+id/btn_n8"
                android:layout_weight="1"
                android:background="@color/button_color"
                android:textSize="@dimen/text_size"
                android:textColor="@color/color_text_button"
                android:onClick="onClick" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="9"
                android:id="@+id/btn_n9"
                android:layout_weight="1"
                android:background="@color/button_color"
                android:textSize="@dimen/text_size"
                android:textColor="@color/color_text_button"
                android:onClick="onClick" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="New Button"
                android:id="@+id/btn_suma"
                android:layout_weight="1"
                android:background="@color/color_button_operator"
                android:textSize="@dimen/text_size"
                android:textColor="@color/color_text_button"
                android:src="@drawable/plus49"
                android:scaleType="fitCenter"
                android:padding="30dp"
                android:onClick="onClick"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="4"
                android:id="@+id/btn_n4"
                android:layout_weight="1"
                android:background="@color/button_color"
                android:textSize="@dimen/text_size"
                android:textColor="@color/color_text_button"
                android:onClick="onClick" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="5"
                android:id="@+id/btn_n5"
                android:layout_weight="1"
                android:background="@color/button_color"
                android:textSize="@dimen/text_size"
                android:textColor="@color/color_text_button"
                android:onClick="onClick" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="6"
                android:id="@+id/btn_n6"
                android:layout_weight="1"
                android:background="@color/button_color"
                android:textSize="@dimen/text_size"
                android:textColor="@color/color_text_button"
                android:onClick="onClick" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="New Button"
                android:id="@+id/btn_resta"
                android:layout_weight="1"
                android:background="@color/color_button_operator"
                android:textSize="@dimen/text_size"
                android:textColor="@color/color_text_button"
                android:src="@drawable/minus42"
                android:padding="30dp"
                android:scaleType="fitCenter"
                android:onClick="onClick"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="1"
                android:id="@+id/btn_n1"
                android:layout_weight="1"
                android:background="@color/button_color"
                android:textSize="@dimen/text_size"
                android:textColor="@color/color_text_button"
                android:onClick="onClick" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="2"
                android:id="@+id/btn_n2"
                android:layout_weight="1"
                android:background="@color/button_color"
                android:textSize="@dimen/text_size"
                android:textColor="@color/color_text_button"
                android:onClick="onClick" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="3"
                android:id="@+id/btn_n3"
                android:layout_weight="1"
                android:background="@color/button_color"
                android:textSize="@dimen/text_size"
                android:textColor="@color/color_text_button"
                android:onClick="onClick" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="New Button"
                android:id="@+id/btn_div"
                android:layout_weight="1"
                android:background="@color/color_button_operator"
                android:textSize="@dimen/text_size"
                android:textColor="@color/color_text_button"
                android:padding="30dp"
                android:src="@drawable/divide2"
                android:scaleType="fitCenter"
                android:onClick="onClick"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="C"
                android:id="@+id/btn_limpiar"
                android:layout_weight="1"
                android:background="@color/button_color"
                android:textSize="@dimen/text_size"
                android:textColor="@color/color_text_button"
                android:singleLine="true"
                android:onClick="onClick" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="0"
                android:id="@+id/btn_n0"
                android:layout_weight="1"
                android:background="@color/button_color"
                android:textSize="@dimen/text_size"
                android:textColor="@color/color_text_button"
                android:onClick="onClick" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="New Button"
                android:id="@+id/btn_equals"
                android:layout_weight="1"
                android:background="@color/button_color"
                android:textSize="@dimen/text_size"
                android:textColor="@color/color_text_button"
                android:padding="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/equal2"
                android:onClick="onClick"
                android:nestedScrollingEnabled="false"
                android:layout_gravity="center" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="New Button"
                android:id="@+id/btn_mult"
                android:layout_weight="1"
                android:background="@color/color_button_operator"
                android:textSize="@dimen/text_size"
                android:textColor="@color/color_text_button"
                android:padding="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/multiply2"
                android:nestedScrollingEnabled="false"
                android:onClick="onClick"
                android:layout_gravity="center" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
